# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 130
insert_final_newline = false

[*.js]
quote_type = single

[{Makefile,makefile,**.mk,*.py}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 72
